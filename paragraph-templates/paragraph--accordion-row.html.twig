{#
  For the Paragraph Type: Accordion Row
  Fields:
    Title
    Title
  This template is a child of paragraph--accordion
  #}
{% set a_title = content.field_title['#items'].getString() %}
{% set a_text = content.field_text['#items'].0.value %}
{% set i = paragraph.id() %}

{% block paragraph %}

<div class="card">
  <div class="card-header" id="heading{{ i }}">
    <h5 class="mb-0"><button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{ i }}" aria-expanded="false" aria-controls="collapse{{ i }}">
      <i class="fas fa-minus"></i>
      <i class="fas fa-plus"></i>
      {{ a_title }}
      </button></h5>
  </div>
  <div id="collapse{{ i }}" class="collapse" aria-labelledby="heading{{ i }}" data-parent="#accordion-group-1">
    <div class="card-body">
      {{ a_text | raw }}
    </div>
  </div>
</div>  
  
{% endblock paragraph %}