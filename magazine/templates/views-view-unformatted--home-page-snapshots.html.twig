{#
  template for the rows
  for the Home Page Snapshots View
  see also views-view--home-page-snapshots
  #}
{% for row in rows %}
  {%
    set row_classes = [
      'carousel-item',
      loop.first ? 'active'
    ]
  %}
  <div{{ row.attributes.addClass(row_classes) }}>
    {{- row.content -}}
  </div>
{% endfor %}
